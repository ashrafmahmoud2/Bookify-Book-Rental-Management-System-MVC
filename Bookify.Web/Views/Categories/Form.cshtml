@model CategoryFormViewModel

@{
    ViewData["Title"] = $"{(Model?.Id > 0 ? "Edit" : "Add")} Category";
}


<div class="card shadow-sm">
    <div class="card-header">
        <h3 class="card-title">@(Model?.Id > 0 ? "Edit" : "Add") Category</h3>
        <div class="card-toolbar">
            <button type="button" class="btn btn-sm btn-light">
                Action
            </button>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form method="post" asp-controller="Categories">
                    @if(Model.Id > 0)
                    {
                        <input  type="hidden" asp-for="Id" />
                    }
                    <div>
                        <div class="form-floating mb-7">
                            <input type="text" class="form-control" asp-for="Name" placeholder="Category Name....." />
                            <label asp-for="Name"></label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-sm">
                        <i class="bi bi-check "></i>    Save
                        </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}